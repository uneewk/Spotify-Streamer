<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="?android:attr/listPreferredItemHeight">

    <ImageView
        android:id="@+id/top_ten_artist_thumbnail"
        android:contentDescription="@string/top_ten_artist_image"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:padding="@dimen/single_view_padding" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <TextView
            android:id="@+id/artist_detail_topLine"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_toEndOf="@id/top_ten_artist_thumbnail"
            android:layout_toRightOf="@id/top_ten_artist_thumbnail"
            android:gravity="bottom"
            android:layout_weight="1"
            android:singleLine="true"
            android:ellipsize="marquee" />

        <TextView
            android:id="@+id/artist_detail_bottomLine"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_toEndOf="@id/top_ten_artist_thumbnail"
            android:layout_toRightOf="@id/top_ten_artist_thumbnail"
            android:gravity="top"
            android:layout_weight="1"
            android:singleLine="true"
            android:ellipsize="marquee" />

        </LinearLayout>
</LinearLayout>